<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-vlcplayer-objc" version="0.2.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>VLC Player (ObjC)</name>

  <js-module src="www/vlcplayer.js" name="VLCPlayer">
    <clobbers target="cordova.plugins.vlcplayer" />
    <clobbers target="window.plugins.vlcplayer" />
  </js-module>

  <platform name="ios">
  <podspec>
    <pods use-frameworks="dynamic">
      <pod name="MobileVLCKit" spec="3.6.0"/>
    </pods>
  </podspec>

  <header-file src="src/ios/VLCPlayer.h" />
  <source-file src="src/ios/VLCPlayer.m" compiler-flags="-fobjc-arc" />
</platform>
</plugin>
